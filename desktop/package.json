{
    "name": "PolyScrabble",
    "private": true,
    "version": "0.0.1",
    "main": "main.js",
    "scripts": {
        "ng": "ng",
        "tauri": "tauri",
        "tauri:prod": "tauri dev",
        "tauri:dev": "tauri dev -c tauri-dev.conf.json",
        "tauri:dev:live": "tauri dev -c tauri-live-dev.conf.json",
        "tauri:build": "tauri build",
        "tauri:build:dev": "tauri build -c tauri-dev.conf.json",
        "tauri:build:dev:live": "tauri build -c tauri-live-dev.conf.json",
        "serve": "ng serve --port 1420",
        "serve:dev": "ng serve --port 1420 --configuration development",
        "serve:dev:live": "ng serve --port 1420 --configuration live-development",
        "build": "ng build",
        "build:dev": "ng build --configuration development",
        "build:dev:live": "ng build --configuration live-development",
        "build:watch": "ng build --watch --configuration development",
        "format": "prettier --config ../.prettierrc.yaml --ignore-path ../.prettierignore --write \"src/**/*\"",
        "test": "ng test",
        "coverage": "ng test --code-coverage --source-map=true",
        "lint": "ng lint --format stylish",
        "lint:fix": "npm run lint -- --fix",
        "electron": "ng build --base-href ./ && electron .",
        "electron:build": "ng build && electron-packager . --asar --ignore=/node_modules --ignore=/e2e --ignore=/src --overwrite --out=./build"
    },
    "dependencies": {
        "@angular/animations": "^15.0.0",
        "@angular/cdk": "^15.0.0",
        "@angular/common": "^15.0.0",
        "@angular/compiler": "^15.0.0",
        "@angular/core": "^15.0.0",
        "@angular/forms": "^15.0.0",
        "@angular/material": "^15.0.0",
        "@angular/platform-browser": "^15.0.0",
        "@angular/platform-browser-dynamic": "^15.0.0",
        "@angular/router": "^15.0.0",
        "@ngx-translate/core": "^14.0.0",
        "@ngx-translate/http-loader": "^7.0.0",
        "@tauri-apps/api": "^1.2.0",
        "@types/file-saver": "^2.0.5",
        "file-saver": "^2.0.5",
        "ngx-captcha": "^13.0.0",
        "ngx-cookie": "^6.0.1",
        "path": "^0.12.7",
        "rxjs": "~7.8.0",
        "socket.io-client": "^4.4.1",
        "tauri-plugin-websocket-api": "github:tauri-apps/tauri-plugin-websocket",
        "tslib": "^2.3.0",
        "zone.js": "~0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.0",
        "@angular-eslint/builder": "^15.0.0",
        "@angular-eslint/eslint-plugin": "^15.0.0",
        "@angular-eslint/eslint-plugin-template": "^15.0.0",
        "@angular-eslint/schematics": "^15.0.0",
        "@angular-eslint/template-parser": "^15.0.0",
        "@angular/cli": "~15.0.0",
        "@angular/compiler-cli": "^15.0.0",
        "@tauri-apps/cli": "^1.2.2",
        "@types/jasmine": "~3.8.0",
        "@types/karma": "^6.3.3",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "5.50.0",
        "@typescript-eslint/parser": "5.50.0",
        "@typescript-eslint/typescript-estree": "^5.50.0",
        "browserslist": "^4.21.5",
        "electron": "^23.0.0",
        "electron-packager": "^17.1.1",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-deprecation": "^1.2.1",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-jsdoc": "^36.0.7",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-unicorn": "^35.0.0",
        "fs": "^0.0.1-security",
        "jasmine-core": "^4.5.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.0.0",
        "prettier": "^2.3.2",
        "typescript": "~4.8.0"
    }
}
